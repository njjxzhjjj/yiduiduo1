<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
		PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
 <!--xml 有2 个大作用 第一个spring的xml 放对象的容器 这个是mybatis的xml 他是链接数据库的-->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<!--如果MySQL 是8.0-->
				<!--<property name="driver" value="com.mysql.cj.jdbc.Driver"/>-->
				<property name="driver" value="com.mysql.jdbc.Driver"/>
				<property name="url" value="jdbc:mysql://127.0.0.1:3306/sifa09mybatis"/>
				<property name="username" value="root"/>
				<property name="password" value="123"/>
			</dataSource>
		</environment>
	</environments>
	 	<mappers>
			<!--每次都要映射-->
			<mapper resource="com/njj/dao/PersonDao.xml"></mapper>
			<mapper resource="com/njj/dao/HumanDAO.xml"></mapper>
			<mapper resource="com/njj/dao/OrdersDAO.xml"></mapper>
			<mapper resource="com/njj/dao/CityDAO.xml"></mapper>
			<mapper resource="com/njj/dao/DiquDAO.xml"></mapper>
		</mappers>
</configuration>